      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "New Capsule",
      "short_name": "New",
      "description": "Create a new secure capsule",
      "url": "/dashboard/capsules/new",
      "icons": [
        {
          "src": "/icons/shortcut-new.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "My Capsules", 
      "short_name": "Capsules",
      "description": "View all your capsules",
      "url": "/dashboard/capsules",
      "icons": [
        {
          "src": "/icons/shortcut-capsules.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Security",
      "short_name": "Security", 
      "description": "Security settings and overview",
      "url": "/dashboard/security",
      "icons": [
        {
          "src": "/icons/shortcut-security.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/*", "application/pdf"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "text/*": [".txt", ".md"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "secure-capsule",
      "url": "/capsule?id=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": ["window-controls-overlay", "standalone"],
  "prefer_related_applications": false
}